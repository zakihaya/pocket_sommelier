= form_for @affiliate_link do |f|
  - if @affiliate_link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@affiliate_link.errors.count, "error")} prohibited this affiliate_link from being saved:"
      %ul
        - @affiliate_link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :publish_end_at
    = f.datetime_select :publish_end_at
  .actions
    = f.submit 'Save'
